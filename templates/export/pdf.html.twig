{# templates/export/pdf.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Log Export - {{ filename }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            line-height: 1.4;
            color: #333;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 2px solid #3b82f6;
            padding-bottom: 20px;
        }

        .header h1 {
            color: #1e293b;
            margin: 0 0 10px 0;
            font-size: 24px;
        }

        .header .subtitle {
            color: #64748b;
            margin: 0;
        }

        .export-info {
            background: #f8fafc;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .export-info p {
            margin: 5px 0;
            font-size: 11px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th {
            background: #f1f5f9;
            padding: 12px 8px;
            text-align: left;
            font-weight: bold;
            border-bottom: 2px solid #e2e8f0;
            font-size: 11px;
            text-transform: uppercase;
        }

        td {
            padding: 10px 8px;
            border-bottom: 1px solid #f1f5f9;
            vertical-align: top;
        }

        tr:nth-child(even) {
            background: #fafbfc;
        }

        .date-col {
            width: 130px;
            font-family: monospace;
            font-size: 10px;
        }

        .severity-col {
            width: 80px;
            text-align: center;
        }

        .severity-badge {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 12px;
            font-size: 10px;
            font-weight: bold;
            text-transform: uppercase;
        }

        .severity-critical {
            background: #fef2f2;
            color: #dc2626;
        }

        .severity-medium {
            background: #fef3c7;
            color: #d97706;
        }

        .severity-low {
            background: #fefce8;
            color: #ca8a04;
        }

        .severity-bug {
            background: #f3f4f6;
            color: #4b5563;
        }

        .message-col {
            word-break: break-word;
            max-width: 300px;
        }

        .footer {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #e2e8f0;
            text-align: center;
            font-size: 10px;
            color: #64748b;
        }

        .page-break {
            page-break-before: always;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>üîç PRISME Log Export</h1>
        <p class="subtitle">{{ filename }}</p>
    </div>

    <div class="export-info">
        <p><strong>Export Date:</strong> {{ exportDate|date('Y-m-d H:i:s') }}</p>
        <p><strong>Total Entries:</strong> {{ logEntries|length }}</p>
        <p><strong>File:</strong> {{ filename }}</p>
    </div>

    <table>
        <thead>
            <tr>
                <th class="date-col">Date</th>
                <th class="severity-col">Severity</th>
                <th class="message-col">Message</th>
            </tr>
        </thead>
        <tbody>
            {% for entry in logEntries %}
                <tr>
                    <td class="date-col">{{ entry.formattedTimestamp }}</td>
                    <td class="severity-col">
                        <span class="severity-badge severity-{{ entry.severity|lower }}">
                            {{ entry.severity }}
                        </span>
                    </td>
                    <td class="message-col">{{ entry.message }}</td>
                </tr>

                {# Page break every 25 entries pour √©viter les pages trop longues #}
                {% if loop.index is divisible by(25) and not loop.last %}
                    </tbody>
                    </table>
                    <div class="page-break"></div>
                    <table>
                        <thead>
                            <tr>
                                <th class="date-col">Date</th>
                                <th class="severity-col">Severity</th>
                                <th class="message-col">Message</th>
                            </tr>
                        </thead>
                        <tbody>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>

    <div class="footer">
        <p>Generated by PRISME Log Visualizer | {{ "now"|date('Y-m-d H:i:s') }}</p>
    </div>
</body>
</html>
