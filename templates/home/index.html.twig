{% extends 'base.html.twig' %}

{% block body %}
<!-- Navigation Bar -->
<nav class="bg-white shadow-lg">
    <div class="max-w-6xl mx-auto px-4">
        <div class="flex justify-between">
            <div class="flex space-x-7">
                <a href="#" class="flex items-center py-4">
                    <span class="font-semibold text-gray-500 text-lg">Logs Viewer</span>
                </a>
            </div>
            <div class="flex items-center space-x-3">
                <a href="#" class="py-2 px-4 text-gray-500 hover:text-gray-700">Home</a>
                <a href="#" class="py-2 px-4 text-gray-500 hover:text-gray-700">Help</a>
                <a href="#" class="py-2 px-4 text-gray-500 hover:text-gray-700">Docs</a>
                <button class="bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded">Get Started</button>
            </div>
        </div>
    </div>
</nav>

<!-- Hero Section -->
<main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28 flex flex-col lg:flex-row justify-between items-center">
    <div class="w-full lg:w-1/2 mb-10 lg:mb-0 flex justify-center">
        <img src="{{ asset('images/398.Make-It-Rain.png') }}" alt="Logs Visualization" class="max-w-full h-auto "/>
    </div>
    <div class="w-full lg:w-1/2 flex flex-col  text-center md:items-end md:text-right">
        <h1 class="text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold text-gray-900 leading-tight">
            <span class="md:block">Where</span>
            <span class="md:block text-blue-600 mt-2">Messy Data</span>
            <span class="md:block mt-2">Becomes</span>
            <span class="md:block text-blue-600 mt-2">Clear Stories</span>
        </h1>

        <p class="mt-6 text-lg text-gray-600 max-w-md">
            Transform your complex log data into actionable insights with our powerful visualization tools.
        </p>

        <div class="mt-8">
            <a href="#" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                Visualize Now
                <svg class="ml-2 -mr-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
            </a>
        </div>
    </div>
</main>

{# Popup Google Sign In #}
{% if show_auth_popup %}
<div id="google-signin-popup" class="popup-overlay">
    <div class="popup-content">
        <div class="popup-header">
            <h3>Connectez-vous à PRISME</h3>
            <button id="close-popup" class="close-btn">&times;</button>
        </div>
        <div class="popup-body">
            <div class="signin-options">
                <a href="{{ path('connect_google_start') }}" class="google-signin-btn">
                    <svg class="google-icon" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    Continue with Google
                </a>

                <div class="divider">or</div>

                <button id="continue-without-login" class="secondary-btn">
                    Continue without logging in
                </button>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    {% if show_auth_popup %}
    setTimeout(function() {
        const hasVisited = localStorage.getItem('prisme_visited');
        if (!hasVisited) {
            showSignInPopup();
        }
    }, 2000);
    {% endif %}


    // Bouton "Se connecter" dans le hero
    const showSigninBtn = document.getElementById('show-signin');
    if (showSigninBtn) {
        showSigninBtn.addEventListener('click', showSignInPopup);
    }

    // Fermer popup
    const closeBtn = document.getElementById('close-popup');
    if (closeBtn) {
        closeBtn.addEventListener('click', function() {
            hideSignInPopup();
            // Do NOT set prisme_visited here, only on real action
        });
    }

    // Continuer sans connexion
    const continueBtn = document.getElementById('continue-without-login');
    if (continueBtn) {
        continueBtn.addEventListener('click', function() {
            hideSignInPopup();
            localStorage.setItem('guest_mode', 'true');
            localStorage.setItem('prisme_visited', 'true');
        });
    }

    // Google sign-in button
    const googleBtn = document.querySelector('.google-signin-btn');
    if (googleBtn) {
        googleBtn.addEventListener('click', function() {
            localStorage.setItem('prisme_visited', 'true');
        });
    }

    // Fermer en cliquant à l'extérieur
    const popup = document.getElementById('google-signin-popup');
    if (popup) {
        popup.addEventListener('click', function(e) {
            if (e.target === this) {
                hideSignInPopup();
            }
        });
    }
});

function showSignInPopup() {
    const popup = document.getElementById('google-signin-popup');
    if (popup) {
        popup.style.display = 'flex';
        popup.style.animation = 'slideInFromRight 0.3s ease-out';
    }
}

function hideSignInPopup() {
    const popup = document.getElementById('google-signin-popup');
    if (popup) {
        popup.style.animation = 'slideOutToRight 0.3s ease-in';
        setTimeout(() => {
            popup.style.display = 'none';
            popup.style.animation = '';
        }, 300);
    }
}
</script>
{% endblock %}
